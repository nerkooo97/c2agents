generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Workflow {
  id          String     @id @default(cuid())
  name        String     @unique
  description String
  goal        String
  planSteps   PlanStep[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model PlanStep {
  id         String   @id @default(cuid())
  agentName  String
  task       String
  workflow   Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  workflowId String
  stepNumber Int
}
