// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider     = "prisma-client-js"
  engineType   = "wasm"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Workflow {
  id              String   @id @default(uuid())
  name            String   @unique
  description     String
  goal            String
  enableApiAccess Boolean  @default(false)
  planSteps       String // Stored as JSON string
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model AgentExecutionLog {
  id           String    @id @default(uuid())
  agentName    String
  timestamp    DateTime  @default(now())
  status       String // "success" or "error"
  latency      Int?
  inputTokens  Int?
  outputTokens Int?
  totalTokens  Int?
  errorDetails String?
}

model Conversation {
  sessionId String   @id
  messages  String // Stored as JSON string
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model KnowledgeDocument {
  id        String   @id @default(uuid())
  filename  String
  content   String
  createdAt DateTime @default(now())
}
