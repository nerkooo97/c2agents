datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
  // To switch to MySQL, comment out the line above and uncomment the block below.
  // Make sure to set the DATABASE_URL environment variable.
  // provider = "mysql"
  // url = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

model Workflow {
  id        String   @id @default(cuid())
  name      String   @unique
  description String
  goal      String
  enableApiAccess Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  planSteps PlanStep[]
}

model PlanStep {
  id         String   @id @default(cuid())
  agentName  String
  task       String
  stepNumber Int
  
  workflow   Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  workflowId String
}
