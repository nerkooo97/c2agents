generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
  // To switch to MySQL, comment out the line above and uncomment the block below.
  // You will also need to update the DATABASE_URL in your .env file
  // and run `npm install mysql2`.
  // ---
  // provider = "mysql"
  // url      = env("DATABASE_URL")
}

model Workflow {
  id              String     @id @default(cuid())
  name            String     @unique
  description     String
  goal            String
  enableApiAccess Boolean    @default(false)
  planSteps       PlanStep[]
}

model PlanStep {
  id         String   @id @default(cuid())
  agentName  String
  task       String
  stepNumber Int
  workflow   Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  workflowId String

  @@index([workflowId])
}
